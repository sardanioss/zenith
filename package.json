{
  "name": "zenith",
  "version": "2.0.0",
  "description": "Peak productivity and task management",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "postinstall": "electron-builder install-app-deps",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never"
  },
  "build": {
    "appId": "com.zenith.planner",
    "productName": "Zenith",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/*.ts",
      "!*.code-workspace",
      "!.vscode",
      "!.github",
      "!dist",
      "!.git",
      "!.gitignore",
      "!node_modules/.cache",
      "!README.md"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Zenith"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "icon.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "icon": "icon.png"
    }
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "electron": "^27.0.0",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "express": "^4.18.2",
    "sortablejs": "^1.15.0",
    "sqlite3": "^5.1.6"
  }
}
